{% extends 'base.html.twig' %}

{% block title %}Noticia index{% endblock %}

{% block body %}
<div class="contenedor">
    <h1>Noticia index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Date</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for noticium in noticias %}
            <tr>
                <td>{{ noticium.id }}</td>
                <td>{{ noticium.Titulo }}</td>
                <td>{{ noticium.date ? noticium.date|date('Y-m-d') : '' }}</td>
                <td>{{ noticium.descripcion }}</td>
                <td>
                    <a class="btn btn-primary mybtn  btn-sm" href="{{ path('app_noticia_show', {'id': noticium.id}) }}">show</a>
                    <a class="btn btn-success mybtn  btn-sm" href="{{ path('app_noticia_edit', {'id': noticium.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_noticia_new') }}">Create new</a>
    </div>
{% endblock %}
